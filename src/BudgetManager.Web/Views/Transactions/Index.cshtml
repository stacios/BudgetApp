@model TransactionListViewModel
@{
    ViewData["Title"] = "Transactions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0"><i class="bi bi-list-ul me-2"></i>Transactions</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Add Transaction
    </a>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-3">
                <div class="col-md-2">
                    <label class="form-label">Start Date</label>
                    <input type="date" class="form-control" name="StartDate" value="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">End Date</label>
                    <input type="date" class="form-control" name="EndDate" value="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Category</label>
                    <select class="form-select" name="CategoryId" asp-items="Model.Filter.Categories">
                        <option value="">All Categories</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Account</label>
                    <select class="form-select" name="AccountId" asp-items="Model.Filter.Accounts">
                        <option value="">All Accounts</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Search</label>
                    <input type="text" class="form-control" name="SearchTerm" value="@Model.Filter.SearchTerm" placeholder="Description..." />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-outline-primary me-2">
                        <i class="bi bi-search"></i> Filter
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Showing @Model.Transactions.Count() of @Model.TotalCount transactions</span>
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Account</th>
                    <th class="text-end">Amount</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tx in Model.Transactions)
                {
                    <tr>
                        <td>@tx.Date.ToString("MM/dd/yyyy")</td>
                        <td>
                            @tx.Description
                            @if (!string.IsNullOrEmpty(tx.Notes))
                            {
                                <i class="bi bi-chat-left-text text-muted ms-1" title="@tx.Notes"></i>
                            }
                        </td>
                        <td><span class="badge bg-secondary">@tx.CategoryName</span></td>
                        <td>@tx.AccountName</td>
                        <td class="text-end @(tx.Amount >= 0 ? "text-success" : "text-danger") fw-bold">
                            @tx.Amount.ToString("C")
                        </td>
                        <td>
                            @if (tx.IsAdjustment)
                            {
                                <span class="badge bg-info">Adjustment</span>
                            }
                            @if (tx.IsLocked)
                            {
                                <span class="badge bg-warning"><i class="bi bi-lock-fill"></i> Locked</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@tx.Id" class="btn btn-sm btn-outline-primary" 
                               title="@(tx.IsLocked ? "View Only (Locked)" : "Edit")">
                                <i class="bi bi-pencil"></i>
                            </a>
                            @if (!tx.IsLocked)
                            {
                                <form asp-action="Delete" asp-route-id="@tx.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this transaction?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if (Model.TotalPages > 1)
    {
        <div class="card-footer">
            <nav>
                <ul class="pagination mb-0 justify-content-center">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.Filter.Page == i ? "active" : "")">
                            <a class="page-link" asp-action="Index" 
                               asp-route-page="@i"
                               asp-route-startDate="@Model.Filter.StartDate?.ToString("yyyy-MM-dd")"
                               asp-route-endDate="@Model.Filter.EndDate?.ToString("yyyy-MM-dd")"
                               asp-route-categoryId="@Model.Filter.CategoryId"
                               asp-route-accountId="@Model.Filter.AccountId"
                               asp-route-searchTerm="@Model.Filter.SearchTerm">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    }
</div>
