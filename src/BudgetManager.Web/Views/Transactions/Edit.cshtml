@model TransactionViewModel
@{
    ViewData["Title"] = Model.IsLocked ? "View Transaction" : "Edit Transaction";
}

<h1 class="h3 mb-4">
    <i class="bi bi-@(Model.IsLocked ? "eye" : "pencil") me-2"></i>@ViewData["Title"]
</h1>

@if (Model.IsLocked)
{
    <div class="alert alert-warning">
        <i class="bi bi-lock me-2"></i>This month is locked. You can view but not edit this transaction.
        Mark as adjustment to allow editing.
    </div>
}

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Date" class="form-label"></label>
                        @if (Model.IsLocked)
                        {
                            <input asp-for="Date" class="form-control" type="date" disabled />
                        }
                        else
                        {
                            <input asp-for="Date" class="form-control" type="date" />
                        }
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        @if (Model.IsLocked)
                        {
                            <input asp-for="Description" class="form-control" disabled />
                        }
                        else
                        {
                            <input asp-for="Description" class="form-control" />
                        }
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Amount" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            @if (Model.IsLocked)
                            {
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" disabled />
                            }
                            else
                            {
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" />
                            }
                        </div>
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label"></label>
                        @if (Model.IsLocked)
                        {
                            <select asp-for="CategoryId" class="form-select" asp-items="Model.Categories" disabled></select>
                        }
                        else
                        {
                            <select asp-for="CategoryId" class="form-select" asp-items="Model.Categories"></select>
                        }
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="AccountId" class="form-label"></label>
                        @if (Model.IsLocked)
                        {
                            <select asp-for="AccountId" class="form-select" asp-items="Model.Accounts" disabled></select>
                        }
                        else
                        {
                            <select asp-for="AccountId" class="form-select" asp-items="Model.Accounts"></select>
                        }
                        <span asp-validation-for="AccountId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label"></label>
                        @if (Model.IsLocked)
                        {
                            <textarea asp-for="Notes" class="form-control" rows="2" disabled></textarea>
                        }
                        else
                        {
                            <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                        }
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input asp-for="IsAdjustment" class="form-check-input" />
                        <label asp-for="IsAdjustment" class="form-check-label">
                            Mark as Adjustment (bypasses month lock)
                        </label>
                    </div>
                    
                    <div class="d-flex gap-2">
                        @if (!Model.IsLocked)
                        {
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-2"></i>Save Changes
                            </button>
                        }
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            @(Model.IsLocked ? "Back" : "Cancel")
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
