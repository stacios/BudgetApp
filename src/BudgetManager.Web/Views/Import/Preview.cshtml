@model ImportPreviewViewModel
@{
    ViewData["Title"] = "Import Preview";
}

<h1 class="h3 mb-4"><i class="bi bi-eye me-2"></i>Import Preview</h1>

<!-- Summary -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2 text-muted">Total Rows</h6>
                <h3 class="card-title mb-0">@Model.TotalRows</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Valid</h6>
                <h3 class="card-title mb-0">@Model.ValidRows</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Duplicates</h6>
                <h3 class="card-title mb-0">@Model.DuplicateRows</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Invalid</h6>
                <h3 class="card-title mb-0">@Model.InvalidRows</h3>
            </div>
        </div>
    </div>
</div>

<form asp-action="Confirm" method="post">
    @Html.AntiForgeryToken()
    
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span>
                <strong>Account:</strong> @Model.AccountName
            </span>
            <div>
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="selectAll(true)">Select All Valid</button>
                <button type="button" class="btn btn-sm btn-outline-secondary" onclick="selectAll(false)">Deselect All</button>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-sm mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 50px;">Import</th>
                        <th>Row</th>
                        <th>Date</th>
                        <th>Description</th>
                        <th class="text-end">Amount</th>
                        <th>Category</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model.Rows)
                    {
                        <tr class="@row.StatusClass">
                            <td>
                                @if (row.Status == ImportRowStatus.OK)
                                {
                                    <input type="checkbox" name="selectedRows" value="@row.RowNumber" checked 
                                           class="form-check-input row-checkbox" />
                                }
                            </td>
                            <td>@row.RowNumber</td>
                            <td>@row.Date?.ToString("MM/dd/yyyy")</td>
                            <td>
                                @row.Description
                            </td>
                            <td class="text-end @(row.Amount >= 0 ? "text-success" : "text-danger")">
                                @row.Amount.ToString("C")
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(row.CategoryName))
                                {
                                    <span class="badge bg-secondary">@row.CategoryName</span>
                                    @if (row.CategorySuggestedByRule)
                                    {
                                        <i class="bi bi-magic text-info" title="Suggested by rule"></i>
                                    }
                                }
                            </td>
                            <td>
                                <span class="badge bg-@(row.Status == ImportRowStatus.OK ? "success" : row.Status == ImportRowStatus.Duplicate ? "warning" : "danger")">
                                    @row.StatusText
                                </span>
                                @if (row.ValidationErrors.Any())
                                {
                                    <br/><small class="text-danger">@string.Join(", ", row.ValidationErrors)</small>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="d-flex gap-2">
        @if (Model.ValidRows > 0)
        {
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle me-2"></i>Import Selected (<span id="selectedCount">@Model.ValidRows</span>)
            </button>
        }
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Back
        </a>
    </div>
</form>

@section Scripts {
    <script>
        function selectAll(select) {
            document.querySelectorAll('.row-checkbox').forEach(cb => cb.checked = select);
            updateCount();
        }
        
        function updateCount() {
            const count = document.querySelectorAll('.row-checkbox:checked').length;
            document.getElementById('selectedCount').textContent = count;
        }
        
        document.querySelectorAll('.row-checkbox').forEach(cb => {
            cb.addEventListener('change', updateCount);
        });
    </script>
}
