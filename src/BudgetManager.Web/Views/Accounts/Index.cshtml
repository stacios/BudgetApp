@model AccountListViewModel
@{
    ViewData["Title"] = "Accounts";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0"><i class="bi bi-bank me-2"></i>Accounts</h1>
    <div>
        <a asp-action="Index" asp-route-showInactive="@(!Model.ShowInactive)" class="btn btn-outline-secondary me-2">
            @(Model.ShowInactive ? "Hide Inactive" : "Show Inactive")
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Add Account
        </a>
    </div>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th class="text-center">Transactions</th>
                    <th class="text-end">Balance</th>
                    <th class="text-center">Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model.Accounts)
                {
                    <tr class="@(!account.IsActive ? "table-secondary" : "")">
                        <td class="fw-bold">@account.Name</td>
                        <td>@account.Type</td>
                        <td class="text-center">
                            <span class="badge bg-secondary">@account.TransactionCount</span>
                        </td>
                        <td class="text-end @(account.Balance >= 0 ? "text-success" : "text-danger")">
                            @account.Balance.ToString("C")
                        </td>
                        <td class="text-center">
                            @if (account.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@account.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            @if (account.TransactionCount == 0)
                            {
                                <form asp-action="Delete" asp-route-id="@account.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Delete this account?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
