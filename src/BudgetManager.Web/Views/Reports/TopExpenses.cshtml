@model TopExpensesReportViewModel
@{
    ViewData["Title"] = "Top Expenses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0"><i class="bi bi-list-ol me-2"></i>Top @Model.TopCount Expenses - @Model.MonthName</h1>
    <div class="btn-group">
        <a asp-action="TopExpenses" asp-route-year="@(Model.Month == 1 ? Model.Year - 1 : Model.Year)" 
           asp-route-month="@(Model.Month == 1 ? 12 : Model.Month - 1)" class="btn btn-outline-secondary">
            <i class="bi bi-chevron-left"></i>
        </a>
        <a asp-action="TopExpenses" asp-route-year="@DateTime.Now.Year" asp-route-month="@DateTime.Now.Month" 
           class="btn btn-outline-secondary">Today</a>
        <a asp-action="TopExpenses" asp-route-year="@(Model.Month == 12 ? Model.Year + 1 : Model.Year)" 
           asp-route-month="@(Model.Month == 12 ? 1 : Model.Month + 1)" class="btn btn-outline-secondary">
            <i class="bi bi-chevron-right"></i>
        </a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span>Total: <strong class="text-danger">@Model.TotalAmount.ToString("C")</strong></span>
        <div class="btn-group btn-group-sm">
            <a asp-action="TopExpenses" asp-route-year="@Model.Year" asp-route-month="@Model.Month" asp-route-count="10" 
               class="btn btn-outline-secondary @(Model.TopCount == 10 ? "active" : "")">Top 10</a>
            <a asp-action="TopExpenses" asp-route-year="@Model.Year" asp-route-month="@Model.Month" asp-route-count="25" 
               class="btn btn-outline-secondary @(Model.TopCount == 25 ? "active" : "")">Top 25</a>
            <a asp-action="TopExpenses" asp-route-year="@Model.Year" asp-route-month="@Model.Month" asp-route-count="50" 
               class="btn btn-outline-secondary @(Model.TopCount == 50 ? "active" : "")">Top 50</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width: 50px;">#</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th class="text-end">Amount</th>
                </tr>
            </thead>
            <tbody>
                @{ var rank = 1; }
                @foreach (var expense in Model.Expenses)
                {
                    <tr>
                        <td><span class="badge bg-secondary">@rank</span></td>
                        <td>@expense.Date.ToString("MM/dd/yyyy")</td>
                        <td>@expense.Description</td>
                        <td><span class="badge bg-info">@expense.CategoryName</span></td>
                        <td class="text-end text-danger fw-bold">@expense.Amount.ToString("C")</td>
                    </tr>
                    rank++;
                }
            </tbody>
        </table>
    </div>
</div>
