@{
    ViewData["Title"] = "Reports";
}

<h1 class="h3 mb-4"><i class="bi bi-bar-chart me-2"></i>Reports</h1>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-clipboard-data display-4 text-primary mb-3"></i>
                <h5 class="card-title">Budget vs Actual</h5>
                <p class="card-text text-muted">
                    Compare your budgeted amounts against actual spending by category.
                </p>
                <a asp-action="BudgetVsActual" class="btn btn-primary">
                    View Report <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-graph-up display-4 text-success mb-3"></i>
                <h5 class="card-title">Month over Month</h5>
                <p class="card-text text-muted">
                    Track your income and expenses trends throughout the year.
                </p>
                <a asp-action="MonthOverMonth" class="btn btn-success">
                    View Report <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body text-center">
                <i class="bi bi-list-ol display-4 text-danger mb-3"></i>
                <h5 class="card-title">Top Expenses</h5>
                <p class="card-text text-muted">
                    Identify your largest spending items for any given month.
                </p>
                <a asp-action="TopExpenses" class="btn btn-danger">
                    View Report <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>
